<Telas>:
    Inicio:
        name: 'tela_inicio'
    Modo_jogo_01:
        name: 'tela_jogo_01'
    Modo_jogo_02:
        name: 'tela_jogo_02'

<Inicio>:
    name: 'inicio'
    BoxLayout:
        orientation: 'vertical'
        padding: 15
        spacing: 15

        BoxLayout:
            orientation: 'vertical'
            padding: 15
            spacing: 10
            size_hint_y: 1.5

            Label:
                id: titulo
                font_size: 40
                text_size: self.size
                halign: 'center'
                valign: 'center'
                text: 'JOGO DA VELHA'

        BoxLayout:
            orientation: 'vertical'
            padding: 15
            spacing: 10
            size_hint_y: 3

            Button:
                font_size: 25
                size_hint_y: 0.2
                text: 'Jogar contra CPU:'
                on_release: app.root.current = 'tela_jogo_01'

            Button:
                font_size: 25
                size_hint_y: 0.2
                text: 'Jogar de dois Jogadores:'
                on_release: app.root.current = 'tela_jogo_02'

